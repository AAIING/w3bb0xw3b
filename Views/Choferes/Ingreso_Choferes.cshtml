                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-3">
                                <label>Rut</label>
                            </div>
                            <div class="col-lg-9">
                                <input id="rut_maestro_edit" type="text" class="form-control validate[required,custom[ValidaRut]]" readonly>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <label>Nombre</label>
                            </div>
                            <div class="col-lg-9">
                                <input id="nombre_maestro_edit" type="text" class="form-control validate[required]">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-3">
                                <label>Dirección</label>
                            </div>
                            <div class="col-lg-9">
                                <input id="direccion_maestro_edit" type="text" class="form-control " maxlength="150">
