<div class="modal fade" id="modal_eliminar_maestro" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog_eliminar">
        <div class="modal-content">
            <div class="modal-header header_modal">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title titulo_modal_h3">Eliminar Chofer</h3>
            </div>
            <div class="modal-body">
                ¿Está seguro de eliminar el Chofer?<br />
                <br />
                <div class="form-horizontal">
                    <input type="hidden" name="rut_hidden" id="rut_hidden" />
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary pull-left" data-dismiss="modal">Cancelar</button>
                        <input type="submit" class="enviar_eliminar_choferes btn btn-danger" value="Eliminar" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" class="init">
    var table_detalle = "";
    var registro_global = 0;
    var referencia_global = 0;
    $(document).ready(function () {
        listar_ChoferesMaestro();
        $("#agregar_chofer").on('click', function () {
            $("#modal_insertar").modal("show");
        });
        $("#agregar_detalle").on('click', function () {
            $("#modal_detalle_insertar").modal("show");
        });

        $('#modal_ver_detalle_chofer').on('shown.bs.modal', function () {
            table_detalle.columns.adjust();
        });
        $('.enviar_eliminar_choferes').click(function (e) {
            e.preventDefault();
            var fd = new FormData();
            fd.append("rut", $("#rut_hidden").val());
            $.ajax({
                type: "POST",
                url: '/Choferes/EliminarChofer/',
                data: fd,
                DataType: 'json',
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data == 1) {
                        $("#modal_eliminar_maestro").modal("hide");
                        mostrar_msj_success('Chofer Eliminado Correctamente');
                        listar_ChoferesMaestro();
                    } else if (data == -1) {
                        mostrar_msj_error("Error al verificar los datos relacionados");
                    } else if (data == 2) {
                        mostrar_msj_error("No se puede eliminar debido que hay datos relacionados");
                    }
                    else {
                        mostrar_msj_error("Error al Eliminar aplicacion:" + data);
                    }
                }
            });
        });


        $('#id_form_guardar_edit').validationEngine();
        $("#maestro_editar").click(function (e) {
            e.preventDefault();
            if (!$("#id_form_guardar_edit").validationEngine('validate')) {
                return false;
            }
            var fd = new FormData();
            fd.append("rutcompleto", $("#rut_maestro_edit").val());
            fd.append("nombre", $("#nombre_maestro_edit").val());
            fd.append("direccion", $("#direccion_maestro_edit").val());
            fd.append("ciudad", $("#ciudad_maestro_edit").val());
            fd.append("email", $("#email_maestro_edit").val());
            fd.append("telefono", $("#telefono_maestro_edit").val());
            $.ajax({
                type: "POST",
                url: '/Choferes/EditarChoferes/',
                data: fd,
                DataType: 'json',
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data == 1) {
                        $("#id_form_guardar_edit").each(function () { this.reset(); });
                        listar_ChoferesMaestro();
                        $("#modal_editar").modal("hide");
                        mostrar_msj_success('Datos Guardados Correctamente');
                    } else if (data == 2) {
                        mostrar_msj_error("Documento electronico ya esta en la tabla");
                    } else {

                        mostrar_msj_error("Error interno. Indique a soporte la descripción del error: " + data);
                    }
                    window.scrollTo(0, 0); //Ir hacia arriba
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    mostrar_msj_error("error de conexión");

                }
            });

        });

        $('#id_form_guardar_insert').validationEngine();


        $("#maestro_enviar").click(function (e) {
            e.preventDefault();
            if (!$("#id_form_guardar_insert").validationEngine('validate')) {
                return false;
            }
            var fd = new FormData();
            fd.append("rutcompleto", $("#rut_maestro").val());
            fd.append("nombre", $("#nombre_maestro").val());
            fd.append("codigousuario", $("#codigousuario_maestro").val());
            fd.append("clave", $("#clave_maestro").val());
            fd.append("direccion", $("#direccion_maestro").val());
            fd.append("ciudad", $("#ciudad_maestro").val());
            fd.append("email", $("#email_maestro").val());
            fd.append("telefono", $("#telefono_maestro").val());
            $.ajax({
                type: "POST",
                url: '/Choferes/GuardarChoferes/',
                data: fd,
                DataType: 'json',
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data == 1) {
                        $("#id_form_guardar_insert").each(function () { this.reset(); });
                        listar_ChoferesMaestro();
                        $("#modal_insertar").modal("hide");
                        mostrar_msj_success('Datos Guardados Correctamente');
                    } else if (data == 2) {
                        mostrar_msj_error("Documento electronico ya esta en la tabla");
                    } else {

                        mostrar_msj_error("Error interno. Indique a soporte la descripción del error: " + data);
                    }
                    window.scrollTo(0, 0); //Ir hacia arriba
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    mostrar_msj_error("error de conexión");

                }
            });

        });

        $

    });


    function listar_ChoferesMaestro() {
        $("#loading").show();
        $.ajax({
            type: "POST",
            url: '/Choferes/partialListadoVerChoferes/',
            contentType: "application/json; charset=utf-8",
            dataType: false,
            success: function (result) {
                $("#loading").hide();
                if (result == "-1") {
                    mostrar_msj_error_volverIniciar("Su Sessión a ha expirado. Ingrese al Sistema nuevamente", "/../Home/Login");
                } else {
                    $("#idDivPartialListadoChoferes").html(result);
                }
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                mostrar_msj_error("error de Conexion");
            }
        });

    }


</script>