@model IEnumerable<WebBox.Models.PagosDModels>

@{
    /**/

    /**/

    Layout = null;
    int i = 0;
}

<div class="table-responsive">
    <table id="table_pagados" class="table table-striped table-bordered tableSection table_consulta" cellspacing="0" width="100%" style="margin-bottom:0">
        <thead>
            <tr style="background-color: #FF9A00; color: #fff">
                <th style="width:8%">
                    N°Doc
                </th>
                <th style="width:7%">
                    Fecha
                </th>
                <th style="width:21%">
                    Cliente
                </th>
                <th style="width:21%">
                    Telefono
                </th>
                <th style="width:7%">
                    Transferencia
                </th>
                <th style="width:7%">
                    Efectivo
                </th>
                <th style="width:6%">
                    Vuelto
                </th>
                <th style="width:7%">
                    Ch.Día
                </th>
                <th style="width:7%">
                    Ch.Fecha
                </th>
                <th style="width:7%">
                    T. Crédito
                </th>
                <th style="width:7%">
                    T Debito
                </th>
                <th style="width:7%">
                    Total
                </th>
                <th style="width:2%">
                    Vb
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string vb = "No";
                if (item.vb == "1")
                {
                    vb = "Si";
                }
                i++;
                <tr>
                    <td>
                        @item.comprobante
                    </td>
                    <td>
                        @item.fechapago
                    </td>
                    <td>
                        @item.cliente
                    </td>
                    <td>
                        @item.telefono
                    </td>
                    <td class="text-right">
                        @item.transferencia.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.efectivo.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.vuelto.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.chequedia.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.chequefecha.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.tarjetacr.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.tarjetadb.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.total.ToString("N0")
                    </td>
                    <td>
                        @vb
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th class="text-right" colspan="4">
                    Totales
                </th>
                <th class="text-right">
                    @ViewData["stransferencia"]

                </th>
                <th class="text-right">
                    @ViewData["sefectivo"]
                </th>
                <th class="text-right">
                    @ViewData["svuelto"]
                </th>
                <th class="text-right">
                    @ViewData["schequedia"]
                </th>
                <th class="text-right">
                    @ViewData["schequefecha"]

                </th>
                <th class="text-right">
                    @ViewData["starjetacr"]
                </th>
                <th class="text-right">
                    @ViewData["starjetadb"]
                </th>
                <th class="text-right">
                    @ViewData["stotal"]
                </th>
                <th class="text-right">
                </th>
            </tr>
        </tfoot>
    </table>
</div>
<script type="text/javascript" class="init">


    $(document).ready(function () {
        table_pagados = $('#table_pagados').DataTable({
            destroy: true,
            "bInfo": true,
            "bPaginate": true,
            "searching": true,
            "ordering": true,
            "bLengthChange": false,
            "lengthMenu": [[10, 45, 75, 105, 135, 165, 195, 225, 255, 285], [10, 45, 75, 105, 135, 165, 195, 225, 255, 285]],
            "language": {
                "sProcessing": "Procesando...",
                "sLengthMenu": "Mostrar _MENU_ registros",
                "sZeroRecords": "Sin Pagos",
                "sEmptyTable": "Sin Pagos",
                "sInfo": " _START_ al _END_ de  _TOTAL_ ",
                "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                "sInfoPostFix": "",
                "sSearch": "Buscar:",
                "sUrl": "",
                "sInfoThousands": ",",
                "sLoadingRecords": "Cargando...",
                "oAria": {
                    "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                },
                "paginate": {
                    "previous": "Anterior",
                    "next": "Siguiente"
                }
            },
            fixedHeader: {
                header: true,
                footer: true
            }
        });



    });

</script>
