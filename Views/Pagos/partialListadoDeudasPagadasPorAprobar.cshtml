@model IEnumerable<WebBox.Models.PagosDModels>

@{
    /**/

    /**/

    Layout = null;
    int i = 0;
}

    <table id="table_pagados" class="table table-striped table-bordered tableSection table_consulta" cellspacing="0" width="100%" style="margin-bottom:0">
        <thead>
            <tr style="background-color: #FF9A00; color: #fff">
                <th style="width:8%">
                    N°Pago
                </th>
                <th style="width:7%">
                    Fecha Pago
                </th>
                <th style="width:26%">
                    Cliente
                </th>
                <th style="width:8%">
                    Teléfono
                </th>
                <th style="width:7%">
                    Transferencia
                </th>
                <th style="width:7%">
                    Efectivo
                </th>
                <th style="width:7%">
                    Vuelto
                </th>
                <th style="width:7%">
                    Ch.Día
                </th>
                <th style="width:7%">
                    Ch.Fecha
                </th>
                <th style="width:7%">
                    T. Crédito
                </th>
                <th style="width:7%">
                    T Debito
                </th>
                <th style="width:7%">
                    Total
                </th>
                <th style="width:2%">
                    <input type="checkbox" class="seleccionarItem_todos" />
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>
                        @item.comprobante
                    </td>
                    <td>
                        @item.fechapago
                    </td>
                    <td>
                        @item.cliente
                    </td>
                    <td>
                        @item.telefono
                    </td>
                    <td class="text-right">
                        @item.transferencia.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.efectivo.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.vuelto.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.chequedia.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.chequefecha.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.tarjetacr.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.tarjetadb.ToString("N0")
                    </td>
                    <td class="text-right">
                        @item.total.ToString("N0")
                    </td>
                    <td class="text-center">
                        <input type="checkbox" id="check_aprobar_@i" class="aprobar_check" data-comprobante="@item.comprobante" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
<script type="text/javascript" class="init">


    $(document).ready(function () {
        table_pagados = $('#table_pagados').DataTable({
            destroy: true,
            "bInfo": true,
            "bPaginate": true,
            "searching": true,
            "ordering": true,
            "bLengthChange": false,
            "scrollX": true,
            "lengthMenu": [[45, 75, 105, 135, 165, 195, 225, 255, 285], [45, 75, 105, 135, 165, 195, 225, 255, 285]],
            "language": {
                "sProcessing": "Procesando...",
                "sLengthMenu": "Mostrar _MENU_ registros",
                "sZeroRecords": "Sin Datos",
                "sEmptyTable": "Sin Datos",
                "sInfo": " _START_ al _END_ de  _TOTAL_ ",
                "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                "sInfoPostFix": "",
                "sSearch": "Buscar:",
                "sUrl": "",
                "sInfoThousands": ",",
                "sLoadingRecords": "Cargando...",
                "oAria": {
                    "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                },
                "paginate": {
                    "previous": "Anterior",
                    "next": "Siguiente"
                }
            },
            fixedHeader: {
                header: true,
                footer: true
            }
        });


        $('.seleccionarItem_todos').click(function (e) {
            if ($('.seleccionarItem_todos').prop('checked')) {
                $("#table_pagados .aprobar_check").each(function () {
                    $(this).prop("checked", true);
                });
            } else {
                $("#table_pagados .aprobar_check").each(function () {
                    $(this).prop("checked", false);
                });
            }
        });

    });

</script>
