@model IEnumerable<WebBox.Models.FotoDespachoModels>

@{
    Layout = null;
    int item_foto = 0;
}


<table id="table_fotos_despacho" class="table table-striped table-bordered tableSection table_consulta" cellspacing="0" width="100%">
    <thead>
        <tr style="background-color: #FF9A00; color: #fff">
            <th width="100%" class="text-center">Fotos</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
       
        <tr style="background-color:#dfd6d6">
            <td>
                <div class="row">
                    <div class="col-xs-2 text-center">
                        <img src="data:image/jpeg;base64,@item.foto" height="350" width="350" style="transform:rotate(0deg);" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-2 text-center">
                        <p>RECIBIDO POR: @item.recibidopor</p>
                    </div>
                </div>
            </td>
        </tr>
    }

</table>


<input type="hidden" id="items_fotos_edit" value="@item_foto" />
<script type="text/javascript" class="init">

    $(document).ready(function () {
        listado_fotos_ot = $('#table_fotos_despacho').DataTable({
            destroy: true,
            "bInfo": true,
            "bPaginate": true,
