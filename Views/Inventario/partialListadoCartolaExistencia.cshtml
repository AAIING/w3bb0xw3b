@model IEnumerable<WebBox.Models.LibroDModels>

@{
                /**/

                /**/

                Layout = null;
                int i = 0;
}


<table id="table_cartolaexistencias" class="table table-striped table-bordered tableSection table_consulta" cellspacing="0" width="100%" style="margin-bottom:0">
    <thead>
        <tr style="background-color: #FF9A00; color: #fff">
            <th>
                Fecha
            </th>
            <th>
                TM
            </th>
            <th>
                Tipo Doc
            </th>
            <th>
                N° Doc.
            </th>
            <th>
                Nombre
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Entradas
            </th>
            <th>
                Salidas
            </th>
            <th>
                Saldo
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i++;
        <tr>
            <td>
                @item.fecha
            </td>
            <td>
                @item.tipomov
            </td>
            <td>
                @item.tipodoc
            </td>
            <td>
                @item.nrodoc
            </td>
            <td>
                @item.nombre
            </td>
            <td>
                @item.cantidad.ToString("N2")
            </td>
            <td>
                @item.entradas.ToString("N2")
            </td>
            <td>
                @item.salidas.ToString("N2")
            </td>
            <td>
                @item.saldo.ToString("N2")
            </td>
        </tr>
        }
    </tbody>
</table>
