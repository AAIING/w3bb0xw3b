@model IEnumerable<WebBox.Models.InventarioDetalleModels>
@{
    Layout = null;
    int i = 0;
    int tvalor = 0;
}



<table id="table_librodeinventario" class="table table-striped table-bordered tableSection table_consulta" cellspacing="0" width="100%" style="margin-bottom:0">
    <thead>
        <tr style="background-color: #FF9A00; color: #fff">
            <th style="width:10%">Codigo</th>
            <th style="width:40%">Producto</th>
            <th style="width:10%">Cantidad</th>
            <th style="width:8%">Unidad</th>
            <th style="width:12%" class="text-right">Precio</th>
            <th style="width:6%" class="text-right">Desc.</th>
            <th style="width:15%" class="text-right">Valor</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i++;
            tvalor += Convert.ToInt32(item.valor);

            <tr>
                <td class="text-center">
                    @item.codigo
                </td>
                <td>
                    @item.detalle
                </td>
                <td class="text-right">
                    @item.cantidad.ToString("N2")
                </td>
                <td>
                    @item.unidad
                </td>
                <td class="text-right">
                    @item.precio.ToString("N0")
                </td>
                <td class="text-right">
                    @item.descuento.ToString("N2")
                </td>
                <td class="text-right">
                    @item.valor.ToString("N0")
                </td>
            </tr>
            i++;
        }
    </tbody>
    <tfoot>
        <tr>
            <th class="text-right" colspan="6">Total</th>
            <th class="text-right">@tvalor.ToString("N0")</th>
        </tr>
    </tfoot>
</table>

<script type="text/javascript" class="init">

